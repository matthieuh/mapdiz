[root-state^='home']

  .nav-bar-main
    position: absolute
    top: 0
    left: 0
    right: 0
    background: rgba(0, 0, 0, 0.15) none repeat scroll 0% 0%;
    box-shadow: 0px 0px 100px 71px rgba(0, 0, 0, 0.16);

    h1
      a
        &:hover
          cursor: inherit

        .title-txt
          color: white

    .top-menu
      .top-menu-link
        .title-icon
          color: white

        &:hover
          background-color: transparent
          color: brand-primary

        .title, .icon
          color: white

         .icon:hover
            color: brand-primary

          .title:hover
            text-decoration: underline

  .nav-bar .top-menu .title-icon .icon
    text-shadow: none

  .app
    min-height: 100%

    home
      height: 900px //temp

      .homepage-layer
        padding: 200px 0 55px 0
        background-color: #59748F
        background-image: url('http://www.so-events.at/SYSTEM/image_background/standard/background_02.jpg')
        background-position: center center
        background-size: cover
        background-repeat: no-repeat

        h1
          font-family: "Lato", sans-serif
          font-weight: 400
          color: white
          background: rgba(0, 0, 0, 0.15) none repeat scroll 0% 0%;
          box-shadow: 0px 0px 100px 71px rgba(0, 0, 0, 0.16);

        .homepage-search-box
          display: flex
          justify-content: center
          align-items: center
          margin-top: 50px

          .grouped-form
            display: flex
            justify-content: center
            align-items: center

            .item
              flex: 1
              margin: 0

              &(:last-child)
                border-right: 0px none

            .button
              display: block
              border-radius: 0px
              font-size: 15px
              margin: 0px

            .input-with-icon
              .input-icon
                color: brand-primary

          #location
            width: 450px

      .container
        display: flex
        flex-direction: column
        margin: 50px auto
        padding-left: 15px
        padding-right: 15px
        box-sizing: border-box


        .event-locations
          display: flex
          flex-wrap: wrap
          justify-content: space-between
          align-content: space-between

          .event-location
            display: flex
            justify-content: center
            align-items: center
            flex: 1 2 0%
            height: 200px
            min-width: 300px
            margin: 12.5px

            background-color: brand-primary
            background-size: cover
            background-position: center center
            background-repeat:no-repeat

            h2
              color: #fff
              background: rgba(0, 0, 0, 0.15) none repeat scroll 0% 0%
              box-shadow: 0px 0px 100px 71px rgba(0, 0, 0, 0.16)

