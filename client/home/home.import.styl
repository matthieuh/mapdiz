[root-state^='home']

  .nav-bar-main
    z-index: 3
    position: absolute
    top: 0
    left: 0
    right: 0
    background: rgba(0, 0, 0, 0.15) none repeat scroll 0% 0%;
    box-shadow: 0px 0px 100px 71px rgba(0, 0, 0, 0.16);

    h1
      a
        &:hover
          cursor: inherit

        .title-txt
          color: white

    .top-menu
      .top-menu-link
        .title-icon
          color: white

        &:hover
          background-color: transparent
          color: brand-primary


        .title, .icon
          color: white

         .icon:hover
            color: brand-primary

          .title:hover
            text-decoration: underline


      login[mode='register']
        .link
          @extends .button
          margin: 5px 0
          padding: 10px 15px
          background-color: green

  .nav-bar .top-menu .title-icon .icon
    text-shadow: none

  .app
    min-height: 100%

    home
      height: 900px //temp

      .homepage-layer
        position: relative
        padding: 200px 0 55px 0

        ul.md-slideshow
          &::after
            z-index: 1
            position: absolute
            top: 0
            bottom: 0
            right: 0
            left: 0
            content: ''
            background-color: #59748F
            background-image: url('assets/images/background/concert.jpg')
            background-position: center center
            background-size: cover
            background-repeat: no-repeat

          li
            list-style: none

            span
              z-index: 2
              width: 100%
              height: 100%
              position: absolute
              top: 0px
              left: 0px
              color: transparent
              background-color: #59748F
              background-position: center center
              background-size: cover
              background-repeat: no-repeat
              opacity: 0
              animation: imageAnimation 36s linear infinite 0s

            &:nth-child(1) span
              background-image: url('assets/images/background/night.jpg')
              animation-delay: 6s

            &:nth-child(2) span
              background-image: url('assets/images/background/pexels-photo.jpg')
              animation-delay: 12s

            &:nth-child(3) span
              background-image: url('assets/images/background/sky-people-clouds-crowd.jpg')
              animation-delay: 18s



        .container
          z-index: 3
          position: relative
          text-align: center

          h1
            font-family: "Lato", sans-serif
            font-weight: 400
            color: white
            background: rgba(0, 0, 0, 0.15) none repeat scroll 0% 0%;
            box-shadow: 0px 0px 100px 71px rgba(0, 0, 0, 0.16);

          .homepage-search-box
            display: flex
            flex-direction: column
            justify-content: center
            margin-top: 50px

            .grouped-form
              display: flex
              flex-wrap: wrap
              flex: 1
              justify-content: center
              align-items: center

              .input-with-icon
                flex: 1
                background-color: #FFF
                border: 1px solid #DDD
                max-width: 450px
                min-width: 300px
                margin: 0

                input
                  color: #3E4145
                  border: 0px none

                  &:active, &:focus
                    background-color: #FFF


                button.input-icon
                  &:hover
                    color: #FF565D


      .container
        display: flex
        flex-direction: column
        margin: 0 auto
        padding-left: 15px
        padding-right: 15px
        box-sizing: border-box

      .homepage-content

        .container
          padding-top: 50px
          padding-bottom: 50px

        .grid-pictures
          display: flex
          flex-wrap: wrap
          justify-content: space-between
          align-content: space-between
          margin-right: -12.5px
          margin-left: -12.5px

          .grid-picture
            display: flex
            justify-content: center
            align-items: center
            flex: 1 2 0%
            height: 200px
            min-width: 300px
            margin: 12.5px
            background-color: brand-primary
            background-size: cover
            background-position: center center
            background-repeat:no-repeat

            h3
              font-size: 1.5rem
              color: #fff
              background: rgba(0, 0, 0, 0.15) none repeat scroll 0% 0%
              box-shadow: 0px 0px 100px 71px rgba(0, 0, 0, 0.16)

@keyframes imageAnimation {
  0% { opacity: 0; animation-timing-function: ease-in; }
  8% { opacity: 1; animation-timing-function: ease-out; }
  17% { opacity: 1 }
  25% { opacity: 0 }
  100% { opacity: 0 }
}
