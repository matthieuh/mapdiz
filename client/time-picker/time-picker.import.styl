.time-picker
  position: relative

  a
    font-weight: bold

  .time-picker-dialog
    position: absolute
    width: 200px

    .time-wrapper
      display: flex

      .hours, .minutes
        display: flex
        flex-direction: column
        flex: 1
        margin: 0 5px

        .select
          margin: 0

        select
          text-align: center
          &:hover
            cursor: pointer

    .hours
      margin-right: 5px

    .btn-close
      color: #AAA
      font-size: 20px
      text-decoration: none
      position: absolute
      right: 5px
      top: 0px
