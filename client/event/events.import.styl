  position: relative
  height: 30px
  justify-content: center
  border: 0
  padding: 5px 5px
  user-select: none
  font-size: 16px
  text-align: center

  &.disabled
    background: #AAA

  &.editable
    margin-right: 5px
    padding-right: 25px
    line-height: 40px

    input[type='text']
      line-height: 40px
      height: 40px
      width: 30px
      text-align: center
      margin: 0
      border: 0
      padding: 0
      display: inline-block
      vertical-align: middle
      white-space: normal
      background: none
      font-weight: bold

    &:hover, &.input:hover
      cursor: pointer

    label
      margin: 0 auto
      text-align: center
      display: flex
      flex-direction: column
      justify-content: center
      &:hover
        cursor: pointer

    &:after
      position: absolute
      top: 50%
      transform: translateY(-50%)
      right: 5px
      text-decoration:none
      font-family: 'FontAwesome'
      font-size: 15px
      font-weight: normal

