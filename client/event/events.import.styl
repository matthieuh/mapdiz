[state^='app.events']
  events-list
    display: flex
    flex-grow: 1
    flex-direction: column
    background-color: white
    h1
      max-height: 50px
      line-height: 50px
      text-align: center
      margin: 0
      font-weight: normal

    form
      display: flex
      position: relative
      flex-shrink: 0

      .search-input-wrapper
        display: flex
        background-color: #fff

        input#search
          flex: 1
          height: 50px
          border: 0
          outline: none
          margin-bottom: 0

        .category.select
          height: 50px
          margin: 0
          border: none
          background-color: #EDF3F6

          select
            height: 50px
            background-color: #EDF3F6
            color: #727272

            &:hover
              cursor: pointer

            option
              background-color: #EDF3F6
              color: #727272
          i.fa
            color: #727272
            z-index: 2

          &:hover
            cursor: pointer

        .result-length
          height: 50px
          width: 120px
          line-height: 50px
          text-align: center
          color: rgba(0,0,0,0.4)

        .active-filters
          display: flex
          align-items: center
          justify-content: center
          height: 50px

          .icon
            font-size: 30px
            padding: 0 10px

            &.active
              color: brand-primary

          &:hover .icon
            cursor: pointer
            color: brand-primary

    .events-list-wrapper
      display: flex
      position: relative
      flex-grow: 1
      background-color: #fff

      .events-list
        position: absolute
        top: 0px
        left: 0px
        bottom: 0px
        right: 0px
        margin: 0
        padding: 0
        overflow-y: auto
        list-style: none

        listElemHeight = 220px

        & > li
          max-height: listElemHeight
          border-bottom: 1px solid #DDD

          border-right: 4px solid transparent
          &:first-child
            border-top: 1px solid #DDD

          &:hover, &.overflown
            background-color: rgba(245, 124, 0, 0.2)
            //transition: all 0.2s ease-out 0s;
            border-right: 4px solid brand-primary

            .content-wrapper

              .event-pic-overlay
                opacity: 1

          .content-wrapper
            position: relative
            min-height: listElemHeight
            max-height: listElemHeight
            overflow: hidden

            .background-image
              height: listElemHeight
              width: 100%;
              z-index: 1 !important
              transition: all 0.2s ease-out 0s

            a.delete
              z-index: 1
              position: absolute
              top: 0
              right: 0.5em
              color: red
              &:hover
                cursor: pointer

            .event-pic-overlay
              position: relative
              height: listElemHeight
              flex: 40
              opacity: 0.8
              background: #aaa
              overflow: hidden
              background-size: cover
              background-position: center center
              background-repeat:no-repeat

              .round
                position: absolute
                top: 10px
                right: 10px
                width: 52px
                height: 52px
                border-radius: 26px
                background-color: white
                opacity: 0.7

                &:hover
                  opacity: 1
                  cursor: pointer

                avatar
                  width: 50px
                  height: 50px
                  border-radius: 25px
                  margin-top: 1px

            .stickers
              list-style-type: none
              position: absolute
              left: 0
              top: 18px
              padding: 0

              .sticker
                margin-bottom: 5px
                padding: 5px 10px
                background-color: rgba(128, 128, 128, 0.7)
                color: white

                &.private
                  background-color: rgba(249, 77, 77, 0.7)

                &.public
                  background-color: rgba(76, 189, 109, 0.7)


            .content
              flex: 60
              position: relative
              padding: 10px

              .presence
                position: absolute
                bottom: 0
                right: 0
                left: 0
                display: flex
                justify-content: center
                font-size: 12px
                .presence-btns
                  button
                    &:focus
                      box-shadow: none
                    &.active
                      background-color: brand-primary
                      color: white

              h2
                margin: 0

              .description
                display: -webkit-box
                height: 96.2px
                margin: 5px
                line-height: 1.3
                font-size: 16px
                overflow: hidden
                text-overflow: ellipsis
                -webkit-line-clamp: 5
                -webkit-box-orient: vertical

              p.creator
                position: absolute
                top: 1em
                right: 0.5em
                margin: 0

.filters
  display: flex
  min-height: 50px
  max-height: 300px
  align-content: stretch

  .range-filter
    display: flex
    align-items: baseline

    &:hover
      cursor: pointer

    .range-btns
      // min-width: 220px
      display: flex;
      justify-content: center;
      padding: 5px 0

    .range-selector
      display: flex
      min-width: 200px
      max-width: 200px

      rzslider
        width: 90%
        margin-right: auto
        margin-left: auto
        margin-bottom: 0

        .rz-limit-ceil
          left: inherit !important
          right: 0

      &.disabled
        .rz-bar.rz-selection
          background-color: #D8E0F3

      &:not(.disabled)
        .rz-pointer, .rz-bar.rz-selection
          background-color: brand-primary

    .range-label
      position: relative
      display: flex
      justify-content: space-around
      height: 30px
      min-width: 110px
      max-width: 110px
      line-height: 30px
      margin: 10px 5px
      background-color: #E3E3E3
      border-radius: 5px
      color: white

      &:after
        position: absolute
        top: 50%
        transform: translateY(-50%)
        right: 5px
        text-decoration:none
        font-family: 'FontAwesome'
        font-size: 15px
        font-weight: normal

      &:not(.disabled):hover, &:not(.disabled)
        background: green
        &:after
          content: '\f00c'

      &.disabled:hover, &.disabled
        background: red
        &:after
          content: '\f00d'

  .sorting
    min-height: 50px

.range-value
