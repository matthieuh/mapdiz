    font-size: 16px
    font-weight: bold
    &:hover
      cursor: pointer

    label
      margin: 0 auto
      padding-right: 20px
      &:hover
        cursor: pointer

    input[type='checkbox']
      display: none

    &:after
      position: absolute
      top: 50%
      transform: translateY(-50%)
      right: 5px
      text-decoration:none
      font-family: 'FontAwesome'
      font-size: 15px
      font-weight: normal

    &:not(.disabled):hover, &:not(.disabled)
      background: red
      &:after
        content: '\f00c'

    &.disabled:hover, &.disabled
      background: #AAA
      &:after
        content: '\f00d'

.input-range
  width: 90%
  -webkit-appearance: none;
  border-radius: 5px;
  outline: none;
  cursor: pointer;
  margin: 0 auto;

  &:disabled::-webkit-slider-thumb
    background: #aaa

  &:disabled::-moz-range-thumb
    background: #aaa

  &:disabled::-ms-thumb
    background: #aaa


/*range styles for chrome*/
.input-range
  &::-webkit-slider-runnable-track
    background: rgba(76, 189, 109, 0.6);
    height: 7px;
    border: none;
    border-radius: 5px;
  &:disabled::-webkit-slider-runnable-track
    background: rgba(170, 170, 170, 0.6)

.input-range::-webkit-slider-thumb
  -webkit-appearance: none
  width: 20px
  height: 20px
  border-radius: 50%
  background: #44AD63
  cursor: pointer
  -webkit-transition: background .15s ease-in-out
  margin-top: -6px

/*range-track style for firefox*/
.input-range
  &::-moz-range-track
    width: 200px
    height: 7px
    background: rgba(76, 189, 109, 0.6)
    border: none
    border-radius: 5px
  &:disabled::-moz-range-track
    background: rgba(170, 170, 170, 0.6)


/*range thumb style for firefox*/
.input-range::-moz-range-thumb {
    border: none;
    height: 20px;
    width: 20px;
    border-radius: 50%;
    background: #44AD63;
    cursor: pointer;
    transition: background .15s ease-in-out;
}

/*rang styles for ie*/
.input-range::-ms-track {
    width: 200px;
    height: 10px;
    background: transparent;
    border-color: transparent;
    border-width: 2px 0;
    color: transparent;
}

.input-range::-ms-fill-lower {
    background: rgba(76, 189, 109, 0.8);
    border-radius: 10px;
}

.input-range::-ms-fill-upper {
    background: rgba(76, 189, 109, 0.3);
    border-radius: 10px;
}

.input-range::-ms-thumb {
    border: none;
    height: 20px;
    width: 20px;
    border-radius: 50%;
    background: #44AD63;
}

.input-range:focus::-ms-fill-lower {
    background: rgba(76, 189, 109, 0.8);
}

.input-range:focus::-ms-fill-upper {
    background: rgba(76, 189, 109, 0.3);
}
