[state^='app.events-create']
  position: relative

  event-create
    position: absolute
    top: 0px
    left: 0px
    bottom: 0px
    right: 0px
    margin: 0px
    padding: 0px
    overflow-y: auto

    header
      display: flex
      position: relative
      //- overflow: hidden
      min-height: 38vh
      background-color: #6E6E6E;

      .editable
        color: #fff

        &:hover
          text-decoration: underline
          &.editable-text
            cursor: text

      a
        color: #fff

      input
        color: #000

      .cover-manager
        position: absolute
        top: 5px
        right: 5px
        padding 10px
        background: rgba(0, 0, 0, 0.15) none repeat scroll 0% 0%
        box-shadow: 0px 0px 100px 71px rgba(0, 0, 0, 0.16)

      .cover
        display: flex
        width: 100%

      .over-cover
        z-index: 8
        height: 110px
        position: absolute
        top: auto
        bottom: 0
        left: 0
        right: 0
        padding 0 10px 5px 10px
        color: #fff
        background: rgba(0, 0, 0, 0.15) none repeat scroll 0% 0%
        box-shadow: 0px 0px 100px 71px rgba(0, 0, 0, 0.16)

        .title
          display: flex

          h1
            position: sticky
            position: -webkit-sticky
            top: 0
            margin: 0

          .validate
            background-color: green
            color: #fff

        .date, .geoloc
          display: flex

          i.icon
            margin-right: 5px

          .prefix
            min-width: 50px
            margin-right: 5px
            font-weight: bold

          .between
            margin-left: 5px
            margin-right: 5px

          .date-field
            font-weight: bold

    main
      display: flex
      flex-direction: column
      flex-grow: 1
      position: relative

      .date-label
        min-width: 105px

      #beginTime, #endTime
        input
          width: 75px

      .angucomplete-dropdown
        overflow-y: auto
        max-height: 200px

      .field-grp
        display: flex

      textarea
        resize: vertical
