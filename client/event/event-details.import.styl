[state^='eventDetails']
  position: relative

  event-details
    position: absolute
    top: 0px
    left: 0px
    bottom: 0px
    right: 0px
    overflow: auto

    header
      display: flex
      position: relative
      overflow: hidden

      .cover
        display: flex
        width: auto
        height: 300px

      .over-cover
        z-index: 8
        height: 100px
        position: absolute
        top: auto
        bottom: 0
        left: 0
        right: 0

        padding 0 10px 5px 10px
        color: #fff

        background: rgba(0, 0, 0, 0.15) none repeat scroll 0% 0%
        box-shadow: 0px 0px 100px 71px rgba(0, 0, 0, 0.16)

        h1
          position: sticky
          position: -webkit-sticky
          top: 0
          margin: 0

    main
      display: flex
      flex-grow: 1
      position: relative

      section
        position: absolute
        top: 0px
        left: 0px
        bottom: 0px
        right: 0px
        word-break: break-all

        p
          height: 1200px
