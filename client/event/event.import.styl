[state^='app.event']
  position: relative

  event
    position: absolute
    top: 0px
    left: 0px
    bottom: 0px
    right: 0px
    margin: 0px
    padding: 0px
    //overflow-y: auto

    header
      display: flex
      position: relative
      //- overflow: hidden
      min-height: 27vh
      background-color: #526B84

      .editable
        color: #fff

        &:hover
          text-decoration: underline
          &.editable-text
            cursor: text

      a
        color: #fff

      .cover-manager
        z-index: 9
        position: absolute
        top: 5px
        right: 5px
        padding 10px
        background: rgba(0, 0, 0, 0.15) none repeat scroll 0% 0%
        box-shadow: 0px 0px 100px 71px rgba(0, 0, 0, 0.16)

      .cover
        max-width: 100%
        height: auto

      .over-cover
        z-index: 8
        height: 110px
        position: absolute
        top: auto
        bottom: 0
        left: 0
        right: 0
        padding 0 10px 5px 10px
        color: #fff
        background: rgba(0, 0, 0, 0.15) none repeat scroll 0% 0%
        box-shadow: 0px 0px 100px 71px rgba(0, 0, 0, 0.16)

        .title
          display: flex

          h1
            position: sticky
            position: -webkit-sticky
            top: 0
            margin: 0

          .validate
            background-color: green
            color: #fff

          .input
            margin: 0
            input
              height: 38px
              padding-top: 0
              padding-bottom: 0

        .date, .geoloc
          display: flex

          i.icon
            margin-right: 5px

          .prefix
            min-width: 50px
            margin-right: 5px
            font-weight: bold

          .between
            margin-left: 5px
            margin-right: 5px

          .date-field
            font-weight: bold

    .presence
      display: flex
      flex-wrap: wrap
      align-items: center
      justify-content: center
      background-color: dark_background
      color: white

      .presence-btns
        display: flex
        align-items: center
        justify-content: center
        min-width: 370px
        margin: 5px

        button.ui.button
          min-width: 130px
          margin: 1px
          border: 0
          background-color: button-color !important
          color: white !important
          
          &.active
            background-color: brand-primary !important
            
          &:hover
            background-color: #546E88 !important

            

      .rsvps
        display: flex
        min-width: 370px
        //flex-direction: column
          
        .rsvps-sum
          min-width: 130px
          
    .event-menu.ui.inverted.segment
      background-color: #546E88
      margin: 0
      padding: 0
      border-radius: 0
      
      .ui.secondary.inverted.pointing.menu
        border-top: none
        border-right: none
        border-left: none
      
        .item.active
          border-color: brand-primary

    main
      display: flex
      flex-direction: column
      flex-grow: 1
      position: relative
      padding: 1rem
      
      h2
        display: inline-block

      .edit-btn
        z-index: 3
        position: absolute
        right: 10px
        top: 10px

      .date-label
        min-width: 105px

      #beginTime, #endTime
        input
          width: 75px

      .angucomplete-dropdown
        overflow-y: auto
        max-height: 200px

      .field-grp
        display: flex

      textarea
        resize: vertical
        
      #public:checked + label::before
        background-color: red !important

  .slimScrollDiv
    flex: 1


  section#category
    h3, article
      display: inline-block

    h3
      margin-right: 20px

    article
      select
        height: 38px

  p.description
    word-break: break-all

