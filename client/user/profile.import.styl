[state^='app.profile']
  header
    background-color: dark_background
    color: #fff
    display: flex

    h1
      margin: 0 auto
      text-align: center

    .avatar-container
      position: relative
      width: 185px
      text-align: center

      .avatar
        height: 185px
        width: 185px
        border-radius: 3px
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5)

      .edit-avatar-btn
        position: absolute
        top: 10px
        right: -7px
        z-index: 2
        padding: 5px 18px 7px
        color: #FFF
        text-align: center
        line-height: 20px
        box-shadow: 1px 1px 1px 0px rgba(0, 0, 0, 0.1)
        background: brand-primary none repeat scroll 0% 0%

        &:hover
          cursor: pointer
          background-color: brand-secondary

    .infos
      .info
        margin-bottom: 15px


    hr
      background-color: #a9a9aa
