[state^='my-account']
  header
    background-color: #4A4A4A
    color: #fff

    h1
      margin: 0 auto
      text-align: center
    
    .profile-picture-container
      position: relative
      height: 185px
      width: 185px
        
      .profile-picture
        height: 185px
        width: 185px
        border-radius: 3px
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5)
        
      .edit-pic-btn
        position: absolute
        top: 10px
        right: -7px
        z-index: 2
        padding: 5px 18px 7px
        color: #FFF
        text-align: center
        line-height: 20px
        box-shadow: 1px 1px 1px 0px rgba(0, 0, 0, 0.1)
        background: mainColor none repeat scroll 0% 0%
        
        &:hover
          cursor: pointer
          background-color: #CC2F22
      
    hr
      background-color: #a9a9aa
      
      


.profile-picture-mini
  position: absolute
  top: 50%
  margin-top: -15px
  margin-left: -35px
  width: 30px
  height: 30px
  border-radius: 15px
  -webkit-border-radius: 15px
  -moz-border-radius: 25px