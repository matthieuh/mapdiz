.set-geoloc-modal
  color: #000

  h3
    text-align: center

  .location-selectors-wrapper
    user-select: none;
    .tabs
      display: flex
      .tab
        padding: 10px
        margin-right: 2px
        &:hover
          cursor: pointer
        &.active
          background-color: brand-primary
          color: #fff

    .location-selectors
      height: 150px
      background-color: brand-primary
      display: flex
      align-items: center

      .location-selector
        flex: 1
