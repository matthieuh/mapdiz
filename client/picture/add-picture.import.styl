.add-picture-modal
  width: 60%
  color: #000

  h3
    text-align: center

  md-dialog-content
    padding: 1rem
    height: 100%


  .drop-box
    display: flex;
    justify-content: center
    align-items: center
    background: #F8F8F8
    border: 5px dashed #DDD
    width: 300px
    height: 65px
    text-align: center
    padding: 50px
    margin: auto
    font-weight: bold

    &:hover
      cursor: pointer

    &.dragover
    border: 5px dashed blue

    &.dragover-err
      border: 5px dashed red

    .preview
      img
        width: 100%
        max-width: 522px


.uploaded-image
  max-width: 300px

.crop-container
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center


.images-container-title
  width: 100%;
