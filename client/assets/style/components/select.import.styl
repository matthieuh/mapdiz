.in-cover-select
  padding: 0
  margin: 0
  border: none
  width: 120px
  border-radius: 3px
  overflow: hidden
  background-color: #fff
  //background: #fff url("http://www.scottgood.com/jsg/blog.nsf/images/arrowdown.gif") no-repeat 90% 50%
  opacity: 0

  select
    padding: 5px 8px
    width: 130%
    border: none
    box-shadow: none
    background-color: transparent
    background-image: none
    -webkit-appearance: none
    -moz-appearance: none
    appearance: none

  &:focus
    outline: none

  &:hover
    cursor: pointer
