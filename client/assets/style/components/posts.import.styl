.posts
  max-width: inherit
  margin: 0
  
  .post
    margin-top: 1em
    padding: 10px
    
    .post-main
      display: flex

      .content
        flex: 1
        
        .author
          font-size: 1.1em
          color: rgba(0, 0, 0, 0.87);
          font-weight: bold;
          
        h3
          margin: 10px 0px
          font-size: 1.2em
          
      .votes
        width: 25px
        height: 70px
        display: flex
        flex-direction: column
              
        .vote, .score
          display: flex
          flex: 1
          align-items: center
          justify-content: center
          
          .icon
            margin: 0
          
        .vote:hover
          cursor: pointer
          transform: scale(1.5)
          
        .vote.current
          transform: scale(1.5)
          
          &.up
            color: green
            
          &.down
            color: red
        
    footer
      margin-top: 10px
      
      button.delete
        float: right
      
      .divider
        margin-bottom: 10px
      
      .comments
        position: relative
        margin-top: 0
        
        .close
          position: absolute
          z-index: 2
          top: 5px
          right: 5px
          color: red
          
          &:hover
            cursor: pointer
            
        .comment
          z-index: 1
          
          .avatar
            height: 35px
            
            .avatar-wrapper
              display: block
              margin: 0px auto
              width: 100%
              height: 100%
              border-radius: 0.25rem
    
    h3
      margin: 0

  form
    .title
      margin-bottom: 10px