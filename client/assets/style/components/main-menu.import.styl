.nav-bar-main
  max-height: 50px
  min-height: 50px

  h1
    height: 50px
    line-height: 50px
    text-align: center
    margin: 0
    font-family: "Lato"
    font-size: 2em
    font-weight: 300
    letter-spacing: 0.18em

    a
      display: flex
      position: relative
      align-items: center
      flex: 1
      max-height: 60px
      text-decoration: none
      padding-left: 10px
      color: #FFF

      img.logo
        height: 100%

      .title
        margin-top: -5px



  .top-menu
    display: flex
    text-align: right
    line-height: 50px
    padding-right: 50px

    a.top-menu-link
      min-width: 50px
      min-height: 50px
      max-height: 50px
      padding: 0 10px
      text-decoration: none
      text-align: center
      color: white

    .title-icon
      font-size: 1.6em

    .title
      font-size: 1em
    #login-dropdown-list
      position: absolute
      top: 50px
      right: -30px
