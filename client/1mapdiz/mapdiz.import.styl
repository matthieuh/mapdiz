[ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak
    display: none

.selectable
  user-select: text


body
  transition: background-color 0.5s ease 0s
  font-family: 'Lato', sans-serif
  font-weight: 400
  user-select: none
  line-height: inherit

.angular-date-range-picker__picker
  display: flex

  .angular-date-range-picker__month
    width: 183 !important
  .angular-date-range-picker__month-name
    width: 183 !important

footer
  /*position: absolute
  bottom: 0*/
  //width: 100%
  min-height: 50px
  background-color: dark_background
  color: white

  .container
    display: flex
    padding: 30px 0px 30px

    .footer-column
      flex: 1
      padding: 0 20px 0 0

      &:last-child
        padding: 0

      ul
        list-style: none
        padding: 0

  .footer-bottom
    padding: 20px 0px 10px
    background-color: #1B2A38

    .container
      padding: 0

      ul
        list-style: none
        padding: 0

        li
          display: inline-block
          padding-right: 10px

          &:not(:last-child):after
            content: '-'
            padding-left: 10px
